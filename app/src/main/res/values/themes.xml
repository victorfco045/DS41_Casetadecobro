<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Utilidades" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Theme.Utilidades" parent="Base.Theme.Utilidades" />

    <style name="buttons" parent="Theme.Utilidades" >
        <item name="android:textColor">@color/green</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="navigateButton" parent="Theme.Utilidades">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="listButton" parent="Theme.Utilidades">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="button_short" parent="Theme.Utilidades" >
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="cardTextTile" parent="Theme.Utilidades">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardText" parent="Theme.Utilidades">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="cardTextSmall" parent="Theme.Utilidades">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="label" parent="Theme.Utilidades">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>